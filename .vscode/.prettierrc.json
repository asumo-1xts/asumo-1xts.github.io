{
  "endOfLine": "auto",
  "overrides": [
    {
      "files": [
        "*.json",
        "*.jsonc"
      ],
      "options": {
        "parser": "jsonc"
      }
    },
    {
      "files": [
        "*.yml",
        "*.yaml"
      ],
      "options": {
        "parser": "yaml"
      }
    },
    {
      "files": [
        "*.vue"
      ],
      "options": {
        "parser": "vue"
      }
    }
  ],
  "parser": "typescript",
  "printWidth": 80,
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "vueIndentScriptAndStyle": true,
  "withNodeModules": true
}